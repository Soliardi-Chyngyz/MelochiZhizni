<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.example.melochizhizni.data.models.Item" />

        <variable
            name="listener"
            type="com.example.melochizhizni.ui.adapter.CatCatItemAdapter.OnItemClickListener" />

        <variable
            name="imgUrl"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/shadow_back"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/et_img"
                    android:layout_width="50dp"
                    app:profileImage="@{imgUrl}"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cat"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Категория"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/et_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.107" />

                <TextView
                    android:id="@+id/ed_cat"
                    style="@style/text"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="10dp"
                    android:text="@{model.category}"
                    app:layout_constraintLeft_toRightOf="@+id/cat"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ed_article"
                    style="@style/text"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Артикль"
                    app:layout_constraintLeft_toRightOf="@+id/et_img"
                    app:layout_constraintTop_toBottomOf="@id/cat" />

                <TextView
                    android:id="@+id/et_article"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@{String.valueOf(model.article)}"
                    app:layout_constraintLeft_toRightOf="@id/ed_article"
                    app:layout_constraintTop_toBottomOf="@id/cat" />


                <TextView
                    android:id="@+id/et_price"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.price + ` сом`}"
                    android:inputType="number"
                    android:textColor="@color/green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>