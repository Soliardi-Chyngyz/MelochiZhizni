<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MelochiZhizni" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">#7DC7D1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:radius">16sp</item>
        <item name="fontFamily">@font/cormorant_unicase_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>

    </style>

<!--    <style name="SplashTheme" parent="Theme.MelochiZhizni">-->
<!--        <item name="android:windowBackground">@drawable/splash_screen</item>-->
<!--    </style>-->

    <style name="My.Style" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">#51D4D8</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="fontFamily">@font/cormorant_unicase_light</item>
        <item name="logo">@drawable/logo</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->

    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/cormorant_unicase_light</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>